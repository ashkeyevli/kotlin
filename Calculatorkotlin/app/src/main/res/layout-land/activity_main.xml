<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1DE9B6"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/inputoutputtext"
        android:layout_width="match_parent"
        android:layout_height="122dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"


        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:editable="false"
        android:gravity="center|right"
        android:hint="0"
        android:padding="10dp"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:layout_below="@+id/inputoutputtext"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"

                style="@style/calc_button1"

                android:text="7" />

            <Button
                android:id="@+id/btn_eight"
                style="@style/calc_button1"

                android:text="8" />

            <Button
                android:id="@+id/btn_nine"
                style="@style/calc_button1"

                android:text="9" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/more_button1"

                android:text="÷" />

            <Button
                android:id="@+id/btn_del"
                style="@style/more_button1"
                android:text="DEL" />

            <Button
                android:id="@+id/btn_root"

                style="@style/land_button"
                android:text="√" />

            <Button
                android:id="@+id/btn_square"
                style="@style/land_button"
                android:text="x^2" />

            <Button
                android:id="@+id/btn_percent"
                style="@style/land_button"
                android:text="%" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"

                style="@style/calc_button1"

                android:text="4" />

            <Button
                android:id="@+id/btn_five"
                style="@style/calc_button1"
                android:background="#434343"

                android:text="5" />

            <Button
                android:id="@+id/btn_six"
                style="@style/calc_button1"


                android:text="6" />

            <Button
                android:id="@+id/btn_mult"
                style="@style/more_button1"

                android:text="×" />

            <Button
                android:id="@+id/btn_c"
                style="@style/more_button1"


                android:text="C" />

            <Button
                android:id="@+id/btn_sin"
                style="@style/land_button"
                android:text="sin" />

            <Button
                android:id="@+id/btn_cos"
                style="@style/land_button"
                android:text="cos" />

            <Button
                android:id="@+id/btn_tan"
                style="@style/land_button"
                android:text="tan" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"

                style="@style/calc_button1"


                android:text="1" />

            <Button
                android:id="@+id/btn_two"
                style="@style/calc_button1"


                android:text="2" />

            <Button
                android:id="@+id/btn_three"
                style="@style/calc_button1"

                android:text="3" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/more_button1"

                android:text="-" />

            <View style="@style/more_button1"

                />

            <Button
                android:id="@+id/btn_cot"
                style="@style/land_button"
                android:text="cot" />

            <Button
                android:id="@+id/btn_ln"
                style="@style/land_button"
                android:text="ln" />

            <Button
                android:id="@+id/btn_log"
                style="@style/land_button"
                android:text="log" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dot"

                style="@style/calc_button1"
                android:text="." />

            <Button
                android:id="@+id/btn_zero"
                style="@style/calc_button1"
                android:text="0" />

            <View style="@style/calc_button1"

                />

            <Button
                android:id="@+id/btn_plus"
                style="@style/more_button1"


                android:text="+" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/more_button1"


                android:text="=" />

            <Button
                android:id="@+id/btn_fact"
                style="@style/land_button"
                android:text="!" />

            <Button
                android:id="@+id/btn_power"
                style="@style/land_button"
                android:text="^" />

            <Button
                android:id="@+id/btn_powersqrt"
                style="@style/land_button"
                android:text="ⁿ√a" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>